<div class="center">
    <div class="login">
        @model MYProj.Models.LoginModel

        @{
            ViewBag.Title = "Login";
        }

        <h2>Вход в систему</h2>


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()


            @Html.ValidationSummary()
            <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
            <div>
                Адрес электронной почты
                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @style = "margin: 0 auto" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @style = "margin: 0 auto" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label", @style = "margin: 20px auto 0 auto" })
                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @style = "margin: 0 auto" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", @style = "margin: 0 auto" })
                </div>
            </div>
            <div>
                <div>
                    <input type="submit" value="Выполнить вход" style="margin-top: 20px" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
    </div>
