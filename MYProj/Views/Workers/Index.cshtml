@model IEnumerable<MYProj.Models.Worker>

@{
    ViewBag.Title = "Index";
}

<h2>Список сотрудников компании</h2>
<div class="row">
    <div class="col-md-4">
        <div style="width:60%" class="artur-a">
            @Html.ActionLink("Добавить сотрудника", "Create", "Workers", routeValues: null, htmlAttributes: new { @class = "btn btn-primary",@style = "text-decoration: none; color: black;"})
        </div>
    </div>
    <div class="col-md-4">
        <form asp-controller="Workers" asp-action="Index" method="get">
            <p>
                Фамилия: <input type="text" style="border-radius: 30px" name="SearchString" />
                <input type="submit" style="border-radius: 10%" class="btn-success" value="Поиск" />
            </p>
        </form>
    </div>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Фамилия)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Имя)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Отчество)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Дата_рождения)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Телефон)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Почта)
        </th>
        <th>
            Отдел
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gender.Пол)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role.Должность)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Фамилия)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Имя)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Отчество)
        </td>
        <td>
            @item.Дата_рождения.ToShortDateString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Телефон)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Почта)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Depart.Название)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Gender.Пол)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Role.Должность)
        </td>
        <td>
            @Html.ActionLink("Изменить", "Edit", new { id=item.Код_сотрудника }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.Код_сотрудника })
        </td>
    </tr>
}

</table>
